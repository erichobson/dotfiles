hyper - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && \
            [[ -n $SPACES[1] ]] && yabai -m space --focus $SPACES[1]

meh - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && \
            [[ -n $SPACES[2] ]] && yabai -m space --focus $SPACES[2]

meh - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && \
            [[ -n $SPACES[3] ]] && yabai -m space --focus $SPACES[3]

meh - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && \
            [[ -n $SPACES[4] ]] && yabai -m space --focus $SPACES[4]

meh - 5 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && \
            [[ -n $SPACES[5] ]] && yabai -m space --focus $SPACES[5]


meh - h : yabai -m window --focus west  || yabai -m display --focus west
meh - j : yabai -m window --focus south || yabai -m display --focus south
meh - k : yabai -m window --focus north || yabai -m display --focus north
meh - l : yabai -m window --focus east  || yabai -m display --focus east


meh - f : yabai -m window --toggle zoom-parent


meh - s : yabai -m window --toggle split


hyper - left  : yabai -m window --warp west ||      \
                $(yabai -m window --display west && \
                yabai -m display --focus west &&    \
                yabai -m window --warp last) ||     \
                yabai -m window --move rel:-10:0

hyper - down  : yabai -m window --warp south ||      \
                $(yabai -m window --display south && \
                yabai -m display --focus south) ||   \
                yabair-m window --move rel:0:10

hyper - up    : yabai -m window --warp north ||      \
                $(yabai -m window --display north && \
                yabai -m display --focus north) ||   \
                yabai -m window --move rel:0:-10

hyper - right : yabai -m window --warp east ||      \
                $(yabai -m window --display east && \
                yabai -m display --focus east &&    \
                yabai -m window --warp first) ||    \
                yabai -m window --move rel:10:0


# balance size of windows
meh - b : yabai -m space --balance


# toggle sticky(+float), picture-in-picture
meh - p : yabai -m window --toggle sticky --toggle pip


# Enable / Disable gaps in current workspace: ctrl + lalt - g
meh - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# New window in hor./ vert. splits for all applications with yabai
# hyper - c : yabai -m window --insert east;  skhd -k "cmd - n"
# hyper - v : yabai -m window --insert south; skhd -k "cmd - n"

# hyper - 0x21 : yabai -m window --space prev && yabai -m space --focus prev
meh - 0x21 : yabai -m space --focus prev
meh - 0x1E : yabai -m space --focus next

# hyper - 0x21:  yabai -m window --space prev && yabai -m space --focus prev
# hyper - 0x1E :  yabai -m window --space next && yabai -m space --focus next

# Mirror Space on X and Y Axis: shift + lalt - {x, y}
# hyper - x : yabai -m space --mirror x-axis
# hyper - y : yabai -m space --mirror y-axis

# # Moving windows between spaces: shift + lalt - {1, 2, 3, 4, p, n } (Assumes 4 Spaces Max per Display)
hyper - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
                  && yabai -m window --space $SPACES[1]

hyper - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] \
                  && yabai -m window --space $SPACES[2]

hyper - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3]

hyper - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] \
                  && yabai -m window --space $SPACES[4]

hyper - 5 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[5] ]] \
                  && yabai -m window --space $SPACES[5]

## Resize (ctrl + lalt - ...)
# Resize windows: ctrl + lalt - {j, k, l, ö}
meh - left    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
meh - down    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
meh - up    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
meh - right    : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

## Insertion (shift + ctrl + lalt - ...)
# Set insertion point for focused container: shift + ctrl + lalt - {j, k, l, ö, s}
# shift + ctrl + lalt - j : yabai -m window --insert west
# shift + ctrl + lalt - k : yabai -m window --insert south
# shift + ctrl + lalt - l : yabai -m window --insert north
# shift + ctrl + lalt - 0x29 : yabai -m window --insert east
# shift + ctrl + lalt - s : yabai -m window --insert stack

